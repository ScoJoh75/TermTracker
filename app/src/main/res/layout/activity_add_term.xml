<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTermActivity">

    <TextView
        android:id="@+id/termInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="Enter New Term Information"
        android:textSize="24sp" />

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginTop="65dp"-->
        <!--android:layout_marginBottom="0dp"-->
        <!--android:orientation="vertical">-->

    <EditText
        android:id="@+id/edit_term_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/termInfoTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:hint="Enter Term Name"
        android:inputType="textAutoComplete"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/startDatePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_term_name"
        android:layout_marginStart="10dp"
        android:text="Start of Term"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edit_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startDatePrompt"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:hint="Click to select Start Date"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/endDatePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_start_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="End of Term"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edit_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endDatePrompt"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:hint="Click to select End Date"
        android:textSize="25sp" />

    <!--</LinearLayout>-->

    <Button
        android:id="@+id/cancelInsertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_end_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="409dp"
        android:text="Cancel New Term" />

    <Button
        android:id="@+id/termInsertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_end_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="409dp"
        android:text="@string/add_term" />

</RelativeLayout>